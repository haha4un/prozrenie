<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".imges_game_1">

    <LinearLayout
        android:id="@+id/lilwithinf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_m"
            android:layout_gravity="center"
            android:layout_marginStart="5sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/txt_m"
            android:layout_gravity="center"
            android:layout_marginStart="10sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/montserrat_bold"
        android:src="@drawable/imgch_img"
        android:text="выберите картинку:"
        android:textAllCaps="true"
        android:textColor="@color/gray"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lilwithinf" />

    <ScrollView
        android:id="@+id/sc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <ImageButton
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:layout_marginTop="20sp"
                android:src="@drawable/g1"
                android:tag="1"
                android:onClick="Clicked" />

            <ImageButton
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:layout_marginTop="20sp"
                android:src="@drawable/g2"
                android:tag="2"
                android:onClick="Clicked" />

            <ImageButton
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:layout_marginTop="20sp"
                android:src="@drawable/g3"
                android:onClick="Clicked"
                android:tag="3" />
            <ImageButton
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:layout_marginTop="20sp"
                android:src="@drawable/g4"
                android:onClick="Clicked"
                android:tag="4"/>
            <ImageButton
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:layout_marginTop="20sp"
                android:src="@drawable/g5"
                android:onClick="Clicked"
                android:tag="5" />
            <ImageButton
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:layout_marginTop="20sp"
                android:src="@drawable/g6"
                android:onClick="Clicked"
                android:tag="6" />
            <ImageButton
                android:layout_width="200sp"
                android:layout_height="200sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:src="@drawable/g7"
                android:onClick="Clicked"
                android:tag="7" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>