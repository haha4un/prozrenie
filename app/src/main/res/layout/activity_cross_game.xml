<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".cross_game"
    android:background="@color/dark_green">

    <LinearLayout
        android:id="@+id/common_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10sp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/comm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/comm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="5sp"
        android:gravity="end"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/quest_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_marginEnd="5sp"
            android:background="@drawable/around"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:onClick="question_btn_cross"
            android:tag="flower"
            android:text="\?"
            android:textColor="@color/gold"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/scores_cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_italic"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="0"
            android:textSize="50sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Ш"
                android:inputType="number"
                android:gravity="center"
                android:fontFamily="@font/montserrat_italic"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/height_cross"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="X"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_italic"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Д"
                android:inputType="number"
                android:gravity="center"
                android:fontFamily="@font/montserrat_italic"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/lenght_cross"/>
        </LinearLayout>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="размеры"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_italic"
            android:id="@+id/sizes_cross"
            android:inputType="number"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="скорость"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_italic"
            android:id="@+id/speed_cross"
            android:inputType="number"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:id="@+id/submit_data"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>