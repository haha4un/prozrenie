<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:id="@+id/games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/cards"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/game_pict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Картинки"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/game_paint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Контур"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="normal" />
            <Button
                android:id="@+id/game_relax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="релакс"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="normal" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/cards"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/games">

        <Button
            android:id="@+id/view_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Просмотреть карты"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/create_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Создать карту"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="normal"
            tools:layout_editor_absoluteX="218dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>