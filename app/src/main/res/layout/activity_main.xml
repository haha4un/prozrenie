<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/lilwithinf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginStart="5sp"
                    android:src="@drawable/logo_m" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10sp"
                    android:text="Носорог"
                    android:textAllCaps="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="34sp"
                    android:textColor="@color/gray"/>

                <TextView
                    android:id="@+id/inf_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginEnd="5sp"
                    android:background="@drawable/around"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:text="i"
                    android:textColor="@color/gold"
                    android:textSize="20sp" />
            </FrameLayout>

            <TextView
                android:id="@+id/minigamesTxtM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50sp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="мини-игры"
                android:textColor="@color/gray"
                app:autoSizeMaxTextSize="40sp"
                app:autoSizeMinTextSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/gamesM"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lilwithinf"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/gamesM"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/minigamesTxtM"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:foregroundGravity="center"
                android:scrollbars="none"
                android:overScrollMode="never">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/drawing_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginStart="10sp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/draw_m"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Рисовалка"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:textAllCaps="true"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/imgs_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginStart="10sp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/imgs_m"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Картинки"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:textAllCaps="true"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/relax_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginStart="10sp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/relax_m"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Релакс"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:textAllCaps="true"/>
                </LinearLayout>
            </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gamesM">

                <Button
                    android:id="@+id/create_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10sp"
                    android:background="@drawable/rectangle_m"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:text="Создать карточку"
                    android:textAllCaps="true"
                    android:textColor="@color/gray"
                    app:autoSizeMaxTextSize="40sp"
                    app:autoSizeMinTextSize="20sp" />

                <Button
                    android:id="@+id/view_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10sp"
                    android:background="@drawable/rectangle_m"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textAllCaps="true"
                    android:text="посмотреть карточки"
                    app:autoSizeMaxTextSize="40sp"
                    app:autoSizeMinTextSize="20sp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>