<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paint_game">

    <FrameLayout
        android:id="@+id/drawingFrameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:padding="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/sc_p">
        <ImageView
            android:id="@+id/imageViewBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="background_image"
            android:foregroundGravity="center"
            android:scaleType="fitCenter" />
        <com.example.drawingapp.DrawingView
            android:id="@+id/drawingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:foregroundGravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/around"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:layout_gravity="end"
            android:layout_margin="5sp"
            android:text="\?"
            android:textColor="@color/gold"
            android:textSize="20sp"
            android:onClick="question_btn_paint"/>
    </FrameLayout>
    <HorizontalScrollView
        android:id="@+id/sc_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/actionButtonsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <Button
                android:id="@+id/downlded_imgs"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:background="@drawable/roundbutton"
                android:text="🎞" />

            <Button
                android:id="@+id/imageGalleryButton"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:background="@drawable/roundbutton"
                android:contentDescription="image"
                android:text="📁"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/imageSaveButton"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:background="@drawable/roundbutton"
                android:contentDescription="brush_image"
                android:text="💾" />

            <SeekBar
                android:id="@+id/imageBrushButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:contentDescription="brush_image" />

            <Button
                android:id="@+id/imageUndoButton"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:background="@drawable/roundbutton"
                android:contentDescription="image"
                android:text="⏪" />

            <Button
                android:id="@+id/new_btn"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:background="@drawable/roundbutton"
                android:contentDescription="@string/start_new"
                android:text="🔄" />

            <Button
                android:id="@+id/open_pallete"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:background="@drawable/roundbutton"
                android:text="🎨" />
        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>