<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paint_game">

    <FrameLayout
        android:id="@+id/drawingFrameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:padding="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/sc_p">

        <ImageView
            android:id="@+id/imageViewBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="background_image"/>

        <com.example.drawingapp.DrawingView
            android:id="@+id/drawingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80FFFFFF"
            />

    </FrameLayout>
    <HorizontalScrollView
        android:id="@+id/sc_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:overScrollMode="never">
    <LinearLayout
        android:id="@+id/actionButtonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/downlded_imgs"
            android:text="🎞"
            android:background="@drawable/roundbutton"
            android:layout_marginStart="10sp"
            android:layout_width="50sp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/imageGalleryButton"
            android:text="📁"
            android:background="@drawable/roundbutton"
            android:textColor="@color/white"
            android:layout_marginStart="10sp"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:contentDescription="image" />
        <Button
            android:id="@+id/imageSaveButton"
            android:text="💾"
            android:background="@drawable/roundbutton"
            android:layout_marginStart="10sp"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:contentDescription="brush_image" />
        <SeekBar
            android:id="@+id/imageBrushButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:contentDescription="brush_image" />
        <Button
            android:id="@+id/imageUndoButton"
            android:text="⏪"
            android:background="@drawable/roundbutton"
            android:layout_marginStart="10sp"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:contentDescription="image" />
        <Button
            android:id="@+id/new_btn"
            android:text="🔄"
            android:background="@drawable/roundbutton"
            android:layout_marginStart="10sp"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/start_new" />
        <Button
            android:id="@+id/open_pallete"
            android:text="🎨"
            android:background="@drawable/roundbutton"
            android:layout_marginStart="10sp"
            android:layout_width="50sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>